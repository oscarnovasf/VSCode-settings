{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Chrome [Local]",
      "type":"pwa-chrome",
      "request": "launch",
      "url": "http://localhost",
      "webRoot": "${workspaceFolder}"
    },

    {
      "name": "XDebug [Local]",
      "type": "php",
      "request": "launch",
      "port": 9000,
      "stopOnEntry": false,
      "xdebugSettings": {
        "max_children": 128,
        "max_data": 1024,
        "max_depth": 3,
        "show_hidden": 1
      },
      "log": false,
    },

    {
      "name": "XDebug [Docker]",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "stopOnEntry": false,
      "xdebugSettings": {
        "max_children": 128,
        "max_data": 1024,
        "max_depth": 3,
        "show_hidden": 1
      },
      "log": false,
      "pathMappings": {
        "/var/www/html":"${workspaceRoot}/",
      },
    }
  ]
}
