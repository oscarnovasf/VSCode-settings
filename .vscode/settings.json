{
  /* ***************************************************************************
   *
   * El presente archivo de configuración está divido en las siguientes
   * secciones:
   *
   * - CONFIGURACIÓN DE USUARIO: Configuraciones que deberán ser copiadas en el
   *   settings.json del usuario y adaptadas según la configuración del SO del
   *   PC dónde se ejecute VSCode. Algunas de ellas sólo funcionan si se
   *   configuran en dicho archivo.
   *
   * - CONFIGURACIÓN DEL PROYECTO: Configuraciones que pueden variar según el
   *   proyecto en el que se trabaje y que deben ser modificadas por cada
   *   desarrollador.
   *
   * - CONFIGURACIÓN GENERAL DEL EDITOR: Configuraciones fijas que se pueden
   *   copiar en el settings.json del usuario o mantener en un archivo por
   *   proyecto. Son configuraciones fijas que no necesitan modificación por
   *   parte del desarrollador.
   *
   * - CONFIGURACIÓN DE MÓDULOS Y PLUGINS: Configuraciones específicas de los
   *   módulos propuestos en el archivo extensions.json. Al igual que las
   *   configuraciones anteriores se pueden copiar el el settings.json del
   *   usuario o mantenerlas en un archivo por proyecto.
   *
   * - CONFIGURACIÓN ESPECÍFICA PARA ALGUNOS LENGUAJES: Son alteraciones de las
   *   configuraciones anteriores específicas para algunos lenguajes. Se puede
   *   proceder con ellas como en los dos casos anteriores.
   *
   * **************************************************************************/

  /* ***************************************************************************
   * 1.- CONFIGURACIÓN DE USUARIO:
   * **************************************************************************/

  /* PHP:
   *
   * Para usar en Windows:
   *   - "php.validate.executablePath": "C:\\laragon\\bin\\php\\php-7.4.14-nts-Win32-vc15-x64\\php.exe",
   * Para usar en MAC (Si ha sido instalado con brew):
   *   - "php.validate.executablePath": "/opt/homebrew/bin/php",
   */
  "php.validate.executablePath": "/opt/homebrew/bin/php",

  /* phpcbf:
   *
   * Para usar en Windows:
   *   - "phpcbf.executablePath": "<ruta .bat>",
   * Para usar en MAC (Si ha sido instalado con brew):
   *   - "phpcbf.executablePath": "/Users/onovas/.composer/vendor/bin/phpcbf",
   */
  "phpcbf.executablePath": "/Users/onovas/.composer/vendor/bin/phpcbf",

  /* PHP Mess Detector:
   *
   * Para usar en Windows:
   *   - "phpmd.command": "%appdata%\\Composer\\vendor\\bin\\phpmd.bat",
   * Para usar en Ubuntu (Copiar en la configuración remota):
   *   - "phpmd.command": "/usr/bin/phpmd",
   * Para usar en MAC (Si ha sido instalado con brew):
   *   - "phpmd.command": "/opt/homebrew/bin/phpmd",
   */
  "phpmd.command": "/opt/homebrew/bin/phpmd",

  "security.workspace.trust.untrustedFiles": "open",

  /* ShellCheck
   *
   * Para usar en Windows:
   *   - "shellcheck.executablePath": "<ruta>",
   * Para usar en MAC (Si ha sido instalado con brew):
   *   - "shellcheck.executablePath": "/opt/homebrew/bin/shellcheck",
   */
  "shellcheck.executablePath": "/opt/homebrew/bin/shellcheck",

  /* Telemetría */
  "telemetry.telemetryLevel": "off",

  /* Ventanas de VSCode */
  "window.dialogStyle": "custom",
  "window.newWindowDimensions": "maximized",
  "window.openFoldersInNewWindow": "on",

  /* ***************************************************************************
   * 1.a - CONFIGURACIÓN DE USUARIO. Propias del sistema Windows:
   * **************************************************************************/

  /* Modificaciones en el terminal */
  "terminal.external.windowsExec": "${env:programfiles}\\Git\\bin\\bash.exe",
  "terminal.integrated.automationProfile.windows": {
    "path": "${env:programfiles}\\Git\\bin\\bash.exe",
  },
  "terminal.integrated.defaultProfile.windows": "GitBash",
  "terminal.integrated.profiles.windows": {
    "Commander (Laragon)": {
      "path": "C:\\laragon\\bin\\cmder\\Cmder.bat",
      "args": ["${workspaceFolder}"]
    },
    "GitBash": {
      "path": "${env:programfiles}\\Git\\bin\\bash.exe",
      "args": ["-l"]
    },
    "CMD": {
      "path": "${env:windir}\\system32\\cmd.exe",
      "args": ["${workspaceFolder}"]
    }
  },

  /* ***************************************************************************
   * 2.- CONFIGURACIÓN DEL PROYECTO:
   * **************************************************************************/

   /* GitLab Workflow */
  "gitlab.instanceUrl": "https://gitlab.gloudify.com",

  /* GitLink */
  "GitLink.defaultRemote": "origin",

  /* JS & CSS Minifier (Minify) */
  "es6-css-minify.minifyOnSave": "exists",
  "es6-css-minify.genJSmap": false,
  "es6-css-minify.jsMinPath": "",

  /* Live Sass Compiler */
  "liveSassCompile.settings.formats":[
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "/css"
    },
    {
      "extensionName": ".min.css",
      "format": "compressed",
      "savePath": "/css"
    }
  ],
  "liveSassCompile.settings.excludeList": [
    "/**/node_modules/**",
    "/.vscode/**"
  ],
  "liveSassCompile.settings.generateMap": true,
  "liveSassCompile.settings.autoprefix": [
    "defaults"
  ],

  /* PHP DocBlocks */
  "php-docblocker.author": {
    "name": "Óscar Novás",
    "email": "hola@oscarnovas.com"
  },

  /* ***************************************************************************
   * 3.- CONFIGURACIÓN GENERAL DEL EDITOR
   * **************************************************************************/

  "css.validate": true,

  "debug.terminal.clearBeforeReusing": true,

  "diffEditor.ignoreTrimWhitespace": false,

  "editor.autoIndent": "full",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": false
  },
  "editor.cursorBlinking": "expand",
  "editor.detectIndentation": true,
  "editor.experimental.stickyScroll.enabled": true,
  "editor.fontSize": 14,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.guides.bracketPairs": true,
  "editor.insertSpaces": true,
  "editor.linkedEditing": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "editor.wordWrapColumn": 80,
  "editor.wordWrap": "off",

  "emmet.includeLanguages": {
    "twig": "html"
  },

  "explorer.compactFolders": false,
  "explorer.openEditors.visible": 0,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "extensions.ignoreRecommendations": false,

  "files.associations": {
    "*.inc": "php",
    "*.module": "php",
    "*.install": "php",
    "*.theme": "php",
    "*.tpl.php": "php",
    "*.tmpl": "html",
    "*.test": "php",
    "*.php": "php",
    "*.twig": "html",
    "*.env.development": "env",
    "*.env.docker": "env",
    "*.env.production": "env"
  },
  "files.autoSave": "onFocusChange",
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.exclude": {
    ".github/": true,
    ".tmp-doc/": true,
    "node_modules/": true,
    "package-lock.json": true,
    "composer.lock": true,
    "debug.log": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreRebaseWarning": true,
  "git.mergeEditor": true,
  "git.postCommitCommand": "push",
  "git.showPushSuccessNotification": true,

  "html.completion.attributeDefaultValue": "doublequotes",
  "html.format.enable": true,
  "html.format.wrapLineLength": 80,

  "json.maxItemsComputed": 50000,
  "json.schemas": [
    {
      "fileMatch": [
        "composer.json",
        "composer.*.json"
      ],
      "url": "https://raw.githubusercontent.com/composer/composer/master/res/composer-schema.json"
    },
    {
      "fileMatch": [
        "package.json",
      ],
      "url": "https://json.schemastore.org/package.json"
    }
  ],

  "php.validate.enable": true,
  "php.validate.run": "onType",

  "terminal.integrated.autoReplies": {
    "[oh-my-zsh] Would you like to update? [Y/n]": "Y\r"
  },

  /* Sólo si se tiene instalado oh-my-zsh */
  "terminal.integrated.fontFamily": "Meslo LG S DZ for Powerline",

  "terminal.integrated.fontSize": 13,
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.tabs.enabled": true,

  "timeline.excludeSources": [
    "timeline.localHistory"
  ],

  "window.commandCenter": true,

  "workbench.colorTheme": "Monokai Dimmed",
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.wrapTabs": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.localHistory.maxFileEntries": 25,
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "newUntitledFile",

  /* ***************************************************************************
   * 4.- CONFIGURACIÓN DE MÓDULOS Y PLUGINS:
   * **************************************************************************/

  /* Activitus Bar
   *
   * Para añadir nuevos módulos:
   * - Buscar en los atajos de teclado workbench.view.extension.
   * - Identificar el módulo que queremos abrir.
   * - Generar la view con command.workbench.view.extension.(nombre)
   *
   * Para los iconos:
   * https://microsoft.github.io/vscode-codicons/dist/codicon.html
   */
  "activitusbar.views": [
    {
      "name": "command.workbench.action.reloadWindow",
      "codicon": "refresh",
      "tooltip": "Recargar VSCode"
    },

    {
      "name": "extensions",
      "codicon": "extensions-view-icon",
      "tooltip": "Extensiones"
    },
    {
      "codicon": "kebab-vertical"
    },
    {
      "name": "command.workbench.view.extension.bookmarks",
      "codicon": "bookmark",
      "tooltip": "Bookmarks"
    },
    {
      "name": "command.workbench.view.extension.dockerView",
      "codicon": "root-folder-opened",
      "tooltip": "Docker"
    },
    {
      "name": "command.workbench.view.extension.thunder-client",
      "codicon": "circuit-board",
      "tooltip": "Thunder Client"
    },
    {
      "name": "command.workbench.view.extension.todo-tree-container",
      "codicon": "checklist",
      "tooltip": "TODOs"
    },

    {
      "codicon": "kebab-vertical"
    },
    {
      "name": "task.hidden_actualizar_tasks_json",
      "codicon": "tasklist",
      "tooltip": "Actualizar Tasks.json"
    },
    {
      "name": "command.replacerules.runRuleset",
      "codicon": "symbol-ruler",
      "tooltip": "Quitar datos innecesarios para composer.json"
    }
  ],

  /* Better Comments */
  "better-comments.highlightPlainText": false,
  "better-comments.multilineComments": true,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF0000",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#FFFF00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#008000",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],

  /* Bookmarks */
  "bookmarks.saveBookmarksInProject": true,

  /* Code Spell Checker => El resto de configuraciónes => cspell.json */
  "cSpell.enabled": true,
  "cSpell.language": "en,es",

  /* Color Highlight */
  "color-highlight.markerType": "dot-before",
  "color-highlight.markRuler": false,

  /* Commit Message Editor*/
  "commit-message-editor.tokens": [
    {
      "label": "Tipo de commit",
      "name": "type",
      "type": "enum",
      "description": "Indica el tipo de commit siguiento las reglas de 'Conventional Commits':",
      "options": [
        {
          "label": "---",
          "value": ""
        },
        {
          "label": "init",
          "description": "Commit inicial (inicio del proyecto)."
        },
        {
          "label": "chore",
          "description": "Tarea de mantenimiento que no produce código fuente."
        },
        {
          "label": "ci",
          "description": "Cambios relacionados con CI/CD (por ejemplo: Travis, Ansible, GitLab CI/CD, Jenkins...)."
        },
        {
          "label": "doc",
          "description": "Cambios relacionados con la documentación."
        },
        {
          "label": "feat",
          "description": "Nueva funcionalidad."
        },
        {
          "label": "fix",
          "description": "Reparación de un error."
        },
        {
          "label": "refactor",
          "description": "Cambios en el código que no arreglan bugs ni añaden nuevas funcionalidades."
        },
        {
          "label": "test",
          "description": "Añadir o corregir pruebas unitarias o tests en general."
        }
      ]
    },
    {
      "label": "Alcance",
      "name": "scope",
      "type": "text",
      "description": "Se puede proporcionar un alcance al tipo de un commit, para proporcionar información contextual adicional (encerrada entre paréntesis - ej., \"feat(parser): ...\".",
      "multiline": false,
      "prefix": "(",
      "suffix": ")"
    },
    {
      "label": "Mensaje",
      "name": "description",
      "type": "text",
      "description": "Descripción corta del commit.",
      "multiline": false
    },
    {
      "label": "Descripción",
      "name": "body",
      "type": "text",
      "description": "Descripción detallada del commit (opcional)",
      "multiline": true,
      "lines": 5,
      "maxLines": 10
    },
    {
      "label": "Breaking change",
      "name": "breaking_change",
      "type": "boolean",
      "description": "Marcar si este commit provoca un cambio de la versión principal.",
      "value": "BREAKING CHANGE: ",
      "default": false
    },
    {
      "label": "Pie del mensaje",
      "name": "footer",
      "type": "text",
      "description": "Texto final del commit. Se puede usar para marcar la issue relacionada (ej. closes #21)",
      "multiline": true,
      "lines": 3,
      "maxLines": 5
    },
  ],
  "commit-message-editor.view.defaultView": "form",
  "commit-message-editor.view.saveAndClose": true,
  "commit-message-editor.view.showRecentCommits": true,

  /* Draw.io */
  "hediet.vscode-drawio.theme": "Kennedy",

  /* Editor Macros */
  "editormacros": {
    /* Keybindings.json (Windows) => ctrl+shift+d */
    /* Keybindings.json (MAC) => ctrl+shift+d */
    "commentDown": {
      "type": "command",
      "args": {
          "commands": [
            "editor.action.copyLinesDownAction",
            "cursorUp",
            "editor.action.addCommentLine",
            "cursorDown"
          ]
      }
    },

    /* Keybindings.json (Windows) => alt+v */
    /* Keybindings.json (MAC) => alt+v */
    "pasteComposer": {
      "type": "multiple",
      "args": {
        "macros": [
          {
            "type": "command",
            "args": {
              "commands": [
                "editor.action.clipboardPasteAction",
                {
                  "command": "replacerules.runRule",
                  "args": {
                    "ruleName": "Quitar datos innecesarios para composer.json"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  },

  /* Empty Indent */
  "emptyIndent.exclude": [
    ".md"
  ],
  "emptyIndent.highlightIndent": false,
  "emptyIndent.removeIndent": true,

  /* Git History Diff */
  "githd.logView.displayExpressStatus": false,

  /* GitLab Workflow */
  "gitlab.customQueries": [
    {
      "name": "Issues (asignadas para mi)",
      "type": "issues",
      "scope": "assigned_to_me",
      "state": "opened",
      "noItemText": "-- Vacío --"
    },
    {
      "name": "Issues (creadas por mi)",
      "type": "issues",
      "scope": "created_by_me",
      "state": "opened",
      "noItemText": "-- Vacío --"
    },
    {
      "name": "MR (asignadas para mi)",
      "type": "merge_requests",
      "scope": "assigned_to_me",
      "state": "opened",
      "noItemText": "-- Vacío --"
    },
    {
      "name": "MR (estoy revisando)",
      "type": "merge_requests",
      "reviewer": "<current_user>",
      "state": "opened",
      "noItemText": "-- Vacío --"
    },
    {
      "name": "MR (creadas por mi)",
      "type": "merge_requests",
      "scope": "created_by_me",
      "state": "opened",
      "noItemText": "-- Vacío --"
    }
  ],
  "gitlab.showProjectMergeRequests": false,
  "gitlab.showIssueLinkOnStatusBar": false,
  "gitlab.showPipelineUpdateNotifications": false,

  /* Json Editor */
  "vscode-json-editor.theme": "dark",

  /* phpcbf */
  "phpcbf.enable": true,
  "phpcbf.documentFormattingProvider": true,
  "phpcbf.onsave": false,
  "phpcbf.standard": "Drupal",

  /* PHP Code Sniffer */
  "phpcs.enable": true,
  "phpcs.standard": "Drupal,DrupalPractice",

  /* PHP DocBlocks */
  "php-docblocker.gap": true,
  "php-docblocker.returnVoid" : false,
  "php-docblocker.useShortNames": true,

  /* PHP Mess Detector */
  "phpmd.enabled": true,
  "phpmd.rules": "${workspaceFolder}/phpmd.xml",
  "phpmd.verbose": false,

  /* PHP Server */
  "phpserver.port": 8888,

  /* Project Manager */
  "projectManager.groupList": true,
  "projectManager.removeCurrentProjectFromList": true,
  "projectManager.tags": [
    "Composer",
    "Drush",
    "Templates",
    "Scripts"
  ],

  /* Replace Rules */
  "replacerules.rules": {
    "Quitar datos innecesarios para composer.json": {
      "find": "composer require (')(.+)(:)(.+)(')",
      "replace": "\"$2\": \"$4\","
    },
  },

  "replacerules.rulesets": {
    "Remove lots of stuff": {
      "rules": [
        "Quitar datos innecesarios para composer.json"
      ]
    }
  },

  /* ShellCheck */
  "shellcheck.enable": true,
  "shellcheck.ignorePatterns": {
    "**/.git/*.sh": true
  },
  "shellcheck.run": "onType",

  /* Task Manager */
  "taskManager.exclude": "hidden:|hidden_|vendor|web/core|web/themes/contrib",

  /* Thunder Client */
  "thunder-client.loadFromProject": true,
  "thunder-client.saveToWorkspace": true,
  "thunder-client.workspaceRelativePath": "docs",
  "thunder-client.codeSnippetLanguage": "curl",
  "thunder-client.showActivityFromCollection": false,

  /* TO-DO TREE */
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "CHANGES",
    "INFO",
  ],
  "todo-tree.filtering.excludeGlobs":[
    "**/.tmp-doc",
    "**/.vscode/**",
    "**/documentation/**",
    "**/node_modules/**",
    "**/vendor/**"
  ],
  "todo-tree.highlights.enabled": true,
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "type": "line",
      "foreground": "#008000",
      "iconColour": "#008000"
    },
    "FIXME": {
      "icon": "alert",
      "type": "line",
      "foreground": "#FF0000",
      "iconColour": "#FF0000"
    },
    "CHANGES": {
      "icon": "info",
      "type": "line",
      "foreground": "#FFA500",
      "iconColour": "#FFA500"
    },
    "INFO": {
      "icon": "info",
      "type": "line",
      "foreground": "#FFFF00",
      "iconColour": "#FFFF00"
    }
  },
  "todo-tree.regex.regex": "((//|#|;)[ ]*($TAGS)[^\\n]*)|(/\\*(\\*?\\s*)*($TAGS)(.|\\n|\\r)*?\\*/)|(<!--\\s*($TAGS)(.|\\n|\\r)*?-->)",

  /* ***************************************************************************
   * 5.- CONFIGURACIÓN ESPECÍFICA PARA ALGUNOS LENGUAJES:
   * **************************************************************************/

  "[csv]": {
    "files.insertFinalNewline": false,
  },

  "[csv (semicolon)]": {
    "files.insertFinalNewline": false,
  },

  "[env]": {
    "files.insertFinalNewline": false,
  },

  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "editor.tabSize": 4,
    "files.insertFinalNewline": false,
  },

  "[jsonc]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "files.insertFinalNewline": false,
  },

  "[markdown]": {
    "files.insertFinalNewline": false,
    "files.trimTrailingWhitespace": false,
  },

  "[shellscript]": {
    "files.insertFinalNewline": false,
  },

  "[xml]": {
    "files.insertFinalNewline": false,
  },

  "[yaml]": {
    "files.insertFinalNewline": false,
  }

}