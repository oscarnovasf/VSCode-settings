{
  /* ***************************************************************************
   * CONFIGURACIÓN GENERAL DEL EDITOR
   * **************************************************************************/

  "css.validate": true,

  "diffEditor.ignoreTrimWhitespace": false,

  "editor.autoIndent": "full",
  "editor.detectIndentation": true,
  "editor.fontSize": 14,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.insertSpaces": true,
  "editor.linkedEditing": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "editor.wordWrapColumn": 80,
  "editor.wordWrap": "off",

  "emmet.includeLanguages": {
    "twig": "html"
  },

  "explorer.openEditors.visible": 0,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "extensions.ignoreRecommendations": false,

  "files.associations": {
    "*.inc": "php",
    "*.module": "php",
    "*.install": "php",
    "*.theme": "php",
    "*.tpl.php": "php",
    "*.test": "php",
    "*.php": "php",
    "*.twig": "html",
  },
  "files.autoSave": "onFocusChange",
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.exclude": {
    ".github/": true,
    ".tmp-doc/": true,
    "node_modules/": true,
    "package-lock.json": true,
    "debug.log": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "git.showPushSuccessNotification": true,
  "git.autofetch": true,

  "html.format.enable": true,
  "html.format.wrapLineLength": 80,

  "php.validate.enable": true,
  "php.validate.run": "onType",

  "telemetry.enableTelemetry": false,

  "terminal.integrated.shell.windows": "${env:programfiles}\\Git\\bin\\bash.exe",

  "workbench.colorTheme": "Monokai Dimmed",
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.wrapTabs": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",

  /* ***************************************************************************
   * CONFIGURACIÓN DE MÓDULOS Y PLUGINS
   * **************************************************************************/

  /* Better Comments */
  "better-comments.highlightPlainText": false,
  "better-comments.multilineComments": true,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF0000",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#FFFF00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#008000",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],

  /* Bracket Pair Colorizer 2 */
  "bracket-pair-colorizer-2.highlightActiveScope": true,
  "bracket-pair-colorizer-2.colors": [
    "#FAFAFA",
    "#9F51B6",
    "#F7C244",
    "#F07850"
  ],
  "bracket-pair-colorizer-2.excludedLanguages": [
    "twig"
  ],

  /* Bookmarks */
  "bookmarks.saveBookmarksInProject": true,

  /* Color Highlight */
  "color-highlight.markerType": "dot-before",
  "color-highlight.markRuler": false,

  /* Empty Indent */
  "emptyIndent.exclude": [
    ".md"
  ],
  "emptyIndent.highlightIndent": false,
  "emptyIndent.removeIndent": true,

  /* LIVE SASS */
  "liveSassCompile.settings.autoprefix": [
    "> 1%",
    "last 2 versions"
  ],
  "liveSassCompile.settings.excludeList": [
    ".vscode/**",
    "css/**"
  ],
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "/css"
    },
    {
      "format": "compressed",
      "extensionName": ".min.css",
      "savePath": "/css"
    }
  ],
  "liveSassCompile.settings.generateMap": true,
  "liveSassCompile.settings.showOutputWindow": false,

  /* PHP Code Sniffer */
  "phpcs.enable": true,
  "phpcs.standard": "Drupal,DrupalPractice",

  /* PHP DocBlocks */
  "php-docblocker.author": {
    "name": "Óscar Novás",
    "email": "hola@oscarnovas.com"
  },
  "php-docblocker.gap": true,
  "php-docblocker.returnVoid" : false,
  "php-docblocker.useShortNames": true,

  /* PHP Intellisense */
  "php.suggest.basic": false,

  /* PHP Mess Detector */
  "phpmd.command": "${env:appdata}\\Composer\\vendor\\bin\\phpmd.bat",

  "phpmd.enabled": true,
  "phpmd.rules": "${workspaceFolder}\\phpmd.xml",
  "phpmd.verbose": false,

  /* PHP Server */
  "phpserver.port": 8888,

  /* ShellCheck */
  "shellcheck.enable": true,

  /* Shell Launcher */
  "shellLauncher.shells.windows": [
    {
      "shell": "%programfiles%\\Git\\bin\\bash.exe",
      "args": ["-l"],
      "label": "GIT Bash"
    },
    {
      "shell": "%windir%\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
      "label": "PowerShell"
    },
    {
      "shell": "%windir%\\system32\\cmd.exe",
      "label": "CMD"
    },
    {
      "shell": "C:\\laragon\\bin\\cmder\\Cmder.bat",
      "args": ["${workspaceFolder}"],
      "label": "Cmder"
    }
  ],

  /* ShellCheck */
  "shellcheck.ignorePatterns": {
    "**/.git/*.sh": true
  },
  "shellcheck.run": "onType",

  /* SVG */
  "svgviewer.enableautopreview": true,

  /* TO-DO TREE */
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "CHANGES",
    "INFO",
  ],
  "todo-tree.filtering.excludeGlobs":[
    "**/node_modules/**",
    "**/.tmp-doc",
    "**/documentation/**",
    "**/vendor/**"
  ],
  "todo-tree.highlights.enabled": true,
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "type": "line",
      "foreground": "#008000",
      "iconColour": "#008000"
    },
    "FIXME": {
      "icon": "alert",
      "type": "line",
      "foreground": "#FF0000",
      "iconColour": "#FF0000"
    },
    "CHANGES": {
      "icon": "info",
      "type": "line",
      "foreground": "#FFA500",
      "iconColour": "#FFA500"
    },
    "INFO": {
      "icon": "info",
      "type": "line",
      "foreground": "#FFFF00",
      "iconColour": "#FFFF00"
    }
  },
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.tree.showScanModeButton": false,

  /* ***************************************************************************
   * CONFIGURACIÓN ESPECÍFICA PARA ALGUNOS LENGUAJES
   * **************************************************************************/

  "[markdown]": {
    "files.trimTrailingWhitespace": false
  }

}
