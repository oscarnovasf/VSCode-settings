{
  "name": "[project_name]",
  "context": ".",

  "defaultProfile": "server_sftp",

  "profiles": {

    "server_sftp": {
      "host": "[server_sftp_ip]",
      "protocol": "sftp",
      "port": 22,
      "username": "[user]",
      "password": "[password]",
      "interactiveAuth": false,
      "secure": false,
      "remotePath": "[remote_path]"
    },

    "server_ftp": {
      "host": "[server_ftp_ip]",
      "protocol": "ftp",
      "port": 21,
      "username": "[user]",
      "password": "[password]",
      "interactiveAuth": false,
      "secure": false,
      "remotePath": "[remote_path]"
    },

    "server_ssh": {
      "host": "[server_ssh_ip]",
      "protocol": "sftp",
      "port": 22,
      "username": "[user]",
      "agent": "ssh-agent",
      "privateKeyPath": "[local_path_to_id_rsa_file]",
      "passphrase": "[password_ssh_file]",
      "interactiveAuth": false,
      "secure": false,
      "remotePath": "[remote_path]"
    }

  },

  "ignore": [
    ".git",
    ".git/**",
    ".github",
    ".github/**",
    ".gitignore",
    ".gitattributes",
    ".tmp-doc",
    ".tmp-doc/**",
    ".vscode",
    ".vscode/**",
    "documentation",
    "documentation/**",
    "node_modules",
    "node_modules/**",
    "debug.log",
    "package.json",
    "package-lock.json",
    "phpcs.xml",
    "phpdox.xml"
  ],
  "connectTimeout": 10000,
  "uploadOnSave": true,
  "downloadOnOpen": true,
  "syncMode": "full",
  "watcher": {
    "files": "css/*.{map,css}, CHANGELOG.md",
    "autoUpload": true,
    "autoDelete": true
  },
  "concurrency": 4

}
